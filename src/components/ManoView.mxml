			{
				// TODO Auto-generated method stub
				var delta:int = 25;
				var ini:int = -50;
				var carta:CartaView;
				for(var i:int = 0; i < this.numElements; i++){
					carta = CartaView(this.getElementAt(i));
					var r:Rectangle = carta.getRect(stage);
					var m:Matrix = carta.transform.matrix;
					m.ty = -carta.height;
					m.rotate(ini * (Math.PI/180));
					carta.transform.matrix = m;
					m.ty = carta.height;
					//carta.rotationZ = ini;
					ini += delta;
				}
			}
			
		]]>
	</fx:Script>
